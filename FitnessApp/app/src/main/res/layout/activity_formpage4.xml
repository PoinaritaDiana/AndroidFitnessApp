<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".FormPage4"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/formres"
    android:padding="10dp"
    android:layout_marginTop="80dp">

    <TextView
        android:text="What is your body type?"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_width="330dp"
        android:layout_height="wrap_content" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:gravity="center">
        <RadioButton android:id="@+id/pear"
            android:width="200dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pear"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton android:id="@+id/round"
            android:width="200dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Round"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton android:id="@+id/rectangle"
            android:width="200dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rectangle"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/hourglass"
            android:width="200dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hourglass"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>

    <Button
        android:id="@+id/submitForm4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="SUBMIT"/>

</LinearLayout>
</ScrollView>