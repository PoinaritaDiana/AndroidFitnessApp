<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".FormPage3"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    android:layout_marginTop="80dp">

    <TextView
        android:text="How would you describe your lifestyle?"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_width="330dp"
        android:layout_height="wrap_content" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:gravity="center">
        <RadioButton android:id="@+id/sedentary"
            android:width="200dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sedentary"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton android:id="@+id/lightly_active"
            android:width="200dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lightly active"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton android:id="@+id/active"
            android:width="200dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/very_active"
            android:width="200dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Very active"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="315dp"
        app:layoutDescription="@xml/activity_formpage3_xml_constraintlayout2_scene">

        <Button
            android:id="@+id/submitForm3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick3"
            android:text="SUBMIT"
            tools:layout_editor_absoluteX="151dp"
            tools:layout_editor_absoluteY="55dp" />
    </androidx.constraintlayout.motion.widget.MotionLayout>
</LinearLayout>
</ScrollView>